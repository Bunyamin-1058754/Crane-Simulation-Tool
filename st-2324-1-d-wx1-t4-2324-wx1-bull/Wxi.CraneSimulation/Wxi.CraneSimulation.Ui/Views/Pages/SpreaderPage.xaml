<Page x:Class="Wxi.CraneSimulation.Ui.Views.Pages.SpreaderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Wxi.CraneSimulation.Ui.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:oxy="http://oxyplot.org/wpf"
      Title="SpreaderPage"
      d:DataContext="{d:DesignInstance local:SpreaderPage, IsDesignTimeCreatable=False}"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False"
      mc:Ignorable="d" Height="900" Width="1600" Loaded="Page_Loaded">

    <Grid>
        <oxy:PlotView Name="plotView" Background="#2d2d2d"/>
    </Grid>
</Page>